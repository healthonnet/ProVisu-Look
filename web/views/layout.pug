doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Pro Visu Look
    link(rel='stylesheet', href!=lunetteStyle, type='text/css')
    link(rel="icon", type="image/png", href="favicon.png")
    link(rel='stylesheet', href!=fontAwesome)
    link(rel='stylesheet', href!=bootstrap)
    script(src!=jquery, type="text/javascript")
    script(src!=bootstrapJs, type="text/javascript")
  body#ext-provisu
    script(src!=sanitizeHtml, type="text/javascript")
    script(src!=lunette, type="text/javascript")
    script(type="text/javascript").
      alter(document, {style:'#{filter}'});
    script(type="text/javascript").
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-17123283-1', 'auto');
        ga('send', 'pageview');

    #ext-provisu-top.text-center
      h1= i18n.appName.message
        br
        small.text-muted= i18n.appDescription.message
      .btn-group(role='group', aria-label='...')
        if external
          a.btn.btn-default.tooltip-nm.provisu-tooltip(href='javascript: unalter(document, \'' + external + '\');')
            i.fa.fa-eye.fa-2x(aria-hidden='true')
            span= i18n.infoDefault.message
        a.btn.btn-default.tooltip-nm.provisu-tooltip(href='javascript: alter(document, {style: \'normal\'});')
          i.fa.fa-low-vision.fa-2x(aria-hidden='true')
          span= i18n.infoNormal.message
        a.btn.btn-default.tooltip-bk.provisu-tooltip(href='javascript: alter(document, {style: \'black\'});')
          i.fa.fa-low-vision.fa-2x(aria-hidden='true')
          span= i18n.infoBlack.message
        a.btn.btn-default.tooltip-bl.provisu-tooltip(href='javascript: alter(document, {style: \'blue\'});')
          i.fa.fa-low-vision.fa-2x(aria-hidden='true')
          span= i18n.infoBlue.message
        a.btn.btn-default.tooltip-cy.provisu-tooltip(href='javascript: alter(document, {style: \'cyan\'});')
          i.fa.fa-low-vision.fa-2x(aria-hidden='true')
          span= i18n.infoCyan.message
        a.btn.btn-default.tooltip-nm.provisu-tooltip(href='javascript: alter(document, {font: \'smaller\'});')
          i.fa.fa-minus.fa-2x(aria-hidden='true')
          span= i18n.infoSmaller.message
        a.btn.btn-default.tooltip-nm.provisu-tooltip(.provisu-tooltiphref='javascript: alter(document, {font: \'bigger\'});')
          i.fa.fa-plus.fa-2x(aria-hidden='true')
          span= i18n.infoBigger.message

    #ext-provisu-inner
      block content
